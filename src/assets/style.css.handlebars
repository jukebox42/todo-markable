<style type="text/css">
html, body {
  margin: 0;
  padding: 0;
  width: 1404px;
  font-family: 'Noto Sans', sans-serif;
  background: {{colors.background}};
}
/*
 * ===
 * Navigation styles
 * ===
 */
nav {
  width: 78px;
  height: 100%;
  background: {{colors.secondary}};
}
nav ul {
  list-style: none;
  margin: 0;
  padding: 0;
  width: 100%;
  background: {{colors.secondary}};
}
nav li {
  margin: 0;
  padding: 0;
}
nav li a {
  display: block;
  text-decoration: none;
  text-align: center;
  padding: 40px 0;
  font-size: 40px;
  line-height: 78px;
  writing-mode: vertical-rl;
  transform: rotate(180deg);
  width: 100%;
  color: {{colors.background}};
  background-color: {{colors.secondary}};
}
nav li.active {
  background-color: {{colors.secondary}};
}
nav li.active a {
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
  background: {{colors.background}};
  color: {{colors.secondary}};
}
/* Used to show the rounded corners above the active item */
nav li:has(+ li.active) {
  background-color: {{colors.background}};
}
nav li:has(+ li.active) a {
  border-top-left-radius: 20px;
}
/* Used to show the rounded corners above the first active item */
nav .starter {
  height: 100px;
  width: 100%;
  background-color: {{colors.background}};
}
nav .starter-fill {
  height: 100px;
  width: 100%;
  background-color: {{colors.secondary}};
}
nav .starter:has(+ li.active) .starter-fill {
  border-bottom-right-radius: 20px;
}
/* Used to show the rounded corners below the active item */
nav li.active + li {
  background-color: {{colors.background}};
}
nav li.active + li a {
  border-bottom-left-radius: 20px;
}
/* Used to show the rounded corners below the last active item */
nav .ender {
  height: 20px;
  width: 100%;
  background-color: {{colors.background}};
}
nav .ender-fill {
  height: 20px;
  width: 100%;
  background-color: {{colors.secondary}};
}
nav li.active + .ender .ender-fill {
  border-top-right-radius: 20px;
}
/* 
 * ===
 * Main content styles
 * ===
 */
main {
  display: flex;
  flex-direction: column;
  height: 100%;
  flex-grow: 1;
  width: calc(1404px - 78px);
}
header {
  height: 79px;
  display: flex;
  align-items: center;
  padding: 0;
  box-sizing: border-box;
  background: {{colors.background}};
  border-bottom: 2px solid {{colors.primary}};
}
header h1 {
  margin: 0;
  font-family: 'EB Garamond', serif;
  font-size: 48px;
  font-weight: bold;
  width: 100%;
  text-align: center;
  color: {{colors.primary}};
}
.page {
  display: flex;
  width: 100%;
  height: {{height}}px;
  page-break-after: always;
  background-image: url('{{{bgImageDataUri}}}');
  background-repeat: repeat;
}
</style>
